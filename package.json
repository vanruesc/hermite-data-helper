{
	"name": "hermite-data-helper",
	"version": "0.3.0",
	"description": "A Hermite data visualisation tool for three.js.",
	"homepage": "https://github.com/vanruesc/hermite-data-helper",
	"main": "build/hermite-data-helper.js",
	"module": "src/index.js",
	"license": "Zlib",

	"keywords": [
		"hermite",
		"data",
		"helper",
		"three.js",
		"3d",
		"geometry",
		"mesh"
	],

	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},

	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/hermite-data-helper.git"
	},

	"bugs": {
		"url": "https://github.com/vanruesc/hermite-data-helper/issues"
	},

	"files": [
		"src",
		"build"
	],

	"scripts": {
		"lint": "npm run lint:lib && npm run lint:test",
		"lint:config": "eslint *.js",
		"lint:lib": "eslint src",
		"lint:test": "eslint test",
		"build": "rollup -c",
		"build:production": "cross-env NODE_ENV=production rollup -c",
		"doc": "esdoc",
		"test": "ava",
		"prepack": "npm run lint && npm run build:production"
	},

	"engines": {
		"node": ">=4.0.0",
		"npm": ">=4.0.0"
	},

	"ava": {
		"failFast": true,
		"files": ["test/**/*.js"]
	},

	"eslintConfig": {
		"extends": "delta"
	},

	"peerDependencies": {
		"three": ">= 0.89.0 <= 0.94.0"
	},

	"devDependencies": {
		"ava": "0.x.x",
		"babel-core": "6.x.x",
		"babel-plugin-external-helpers": "6.x.x",
		"babel-preset-env": "1.x.x",
		"cross-env": "5.x.x",
		"esdoc": "1.x.x",
		"esdoc-standard-plugin": "1.x.x",
		"eslint": "5.x.x",
		"eslint-config-delta": "0.x.x",
		"rollup": "0.x.x",
		"rollup-plugin-babel": "3.x.x",
		"rollup-plugin-babel-minify": "5.x.x",
		"rollup-plugin-node-resolve": "3.x.x",
		"three": "0.94.x"
	}
